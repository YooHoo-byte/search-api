# -----------------------------------
# Server Configuration
# -----------------------------------
# Port for the API to listen on (default 3000)
PORT=3000

# Environment (development, production, etc.)
NODE_ENV=production

# Allowed CORS origin (use '*' to allow all)
CORS_ORIGIN=*

# -----------------------------------
# API Keys (Optional but recommended)
# -----------------------------------

# Weather API key (e.g., OpenWeatherMap)
WEATHER_API_KEY=

# News API key (if using any news provider requiring API key)
NEWS_API_KEY=

# GitHub API token (optional but increases rate limits)
GITHUB_TOKEN=

# Admin API key for cache actions (clear/stats)
ADMIN_API_KEY=

# -----------------------------------
# Feature Toggles (Optional)
# -----------------------------------
# Enable or disable various providers
ENABLE_DUCKDUCKGO=true
ENABLE_STARTPAGE=true
ENABLE_IMAGES=true
ENABLE_VIDEOS=true
ENABLE_NEWS=true
ENABLE_WEATHER=true

# Safe search default, e.g., off, moderate, strict
DEFAULT_SAFE_SEARCH=moderate
